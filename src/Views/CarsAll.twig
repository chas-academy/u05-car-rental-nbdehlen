{% include '/Partials/menu.html' %}

<table>
<h1> Bilar </h1>
  <th> Registration </th>
  <th> Make </th>
  <th> Color </th>
  <th> Year </th>
  <th> Price </th>
  <th> Rented by </th>
  <th> Rented from </th>

  {%  for value in carArray %}
  <tr>
        <td> {{ value.Registration }}</td>
        <td> {{ value.Make }}</td>
        <td> {{ value.Color }}</td>
        <td> {{ value.Year }} </td>
        <td> {{ value.Price }}</td>
        <td> {{ value['Rented by'] }}</td>
        <td> {{ value['Rented from'] }}</td>
        <td><form method="post" action="/CarEdit/{{ value.Registration }}/{{ value.Make }}/{{ value.Color }}">
        <input type="hidden" value="{{ value.Registration }}">
        <input type="submit" value="Edit">
        </form></td>
        {% if value['Rented by'] != 'Free' %}
        <td> <form method="post" action="/CarRemove/{{ value.Registration }}">
        <input type="submit" value="Remove" name="Registration" disabled>
        {% else %}
            <td> <form method="post" action="/CarRemove/{{ value.Registration }}"
            onsubmit="return confirm('Ta bort bilen frÃ¥n bilregistret?');">
        <input type="submit" value="Remove" name="Registration">
        {% endif %}
        </form></td>
  </tr>
  {%  endfor %}

  </table>

